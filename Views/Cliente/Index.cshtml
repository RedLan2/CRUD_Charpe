@model CRUD.Models.Cliente
<div>
                <div>
                    <form asp-action="Index">
                        <div class="form-group">
                               
                                <input asp-for="Nome" class="form-control" placeholder="Nome">
                        </div>
                         <div class="form-group">
                                
                                <input asp-for="Numero" class="form-control" placeholder="Numero">
                        </div>
                         <div class="form-group">
                               <input asp-for="Email" class="form-control" placeholder="Email" required> 
                               <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <br>
                        <div>
                            <input type="submit" value="Criar" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>

            @section Scripts{
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script> 
                <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
            }

            